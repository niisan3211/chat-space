.side_bar
  .side_bar__header
    .side_bar__header__box
      %p.side_bar__header__box__name
        = current_user.nickname
      %ul.side_bar__header__box__icon
        %li.side_bar__header__box__icon__edit
          = link_to new_group_path do
            = icon('fa','edit')
        %li.side_bar__header__box__icon__cog
          =link_to edit_user_path(current_user) do
            = icon('fa','cog')
  .side_bar__group-list
    - current_user.groups.each do |group|  
      =link_to group_messages_path(group) do
        %ul.side_bar__group-list__display
          %li.side_bar__group-list__display__name
            = group.name
          %li.side_bar__group-list__display__message
            = group.show_last_message
   